<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".ui.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Đăng ký"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill your details or continue with
social media"
            android:textColor="@color/black" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:background="@drawable/custom_edittext"
        app:hintTextColor="@color/my_counter_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="9dp"
        android:textColorHint="#919191"
        android:textColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_centerHorizontal="true"
        android:textColorHint="#919191"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="9dp"
        android:layout_height="wrap_content"
        app:endIconDrawable="@drawable/icon_selection"
        app:endIconMode="password_toggle"
        app:endIconTint="#131313"
        android:background="@drawable/custom_edittext"
        app:hintTextColor="@color/my_counter_color"
        app:passwordToggleEnabled="true"
      >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:textColorHint="#919191"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
        app:endIconDrawable="@drawable/icon_selection"
        app:endIconMode="password_toggle"
        app:endIconTint="#131313"
        android:layout_marginRight="9dp"
      >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/re_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:textSize="16sp"
            android:id="@+id/tvValidateLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="12dp"
            android:text="Có ít nhất 6 ký tư"
            android:textColor="@color/red"
            android:textStyle="italic|bold" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/tvValidateLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="12dp"
            android:text="Có ít nhất 1 chữ cái viết hoa và viết thường"
            android:textColor="@color/red"
            android:textStyle="italic|bold" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/tvValidateNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="12dp"
            android:text="Có ít nhất 1 số"
            android:textColor="@color/red"
            android:textStyle="italic|bold" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/tvValidateSpecialCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="12dp"
            android:text="Có ít nhất 1 ký tự đặc biệt"
            android:textColor="@color/red"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="9dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button1"
        android:fontFamily="@font/raleway_medium"
        app:backgroundTint="@null"
        android:gravity="center"
        android:text="Đăng ký"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>